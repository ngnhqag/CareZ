<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.SignInActivity">

    <!-- Tiêu đề chính -->
    <TextView
        android:id="@+id/txtcareYourHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Care Your Health"
        android:textColor="@color/primary"
        android:textSize="22sp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/imgcareZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="CareZ Logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtcareYourHealth"
        app:srcCompat="@drawable/newcarez" />

    <!-- Tiêu đề đăng nhập -->
    <TextView
        android:id="@+id/txtsignInNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng Nhập"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/primary"
        app:layout_constraintTop_toBottomOf="@id/imgcareZ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Ô nhập Email -->
    <EditText
        android:id="@+id/edtuserName"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="16dp"
        android:textColor="#222222"
        android:textColorHint="#9E9E9E"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@id/txtsignInNow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="32dp" />

    <!-- Ô nhập Mật khẩu -->
    <EditText
        android:id="@+id/edtpassword"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:paddingHorizontal="16dp"
        android:textColor="#222222"
        android:textColorHint="#9E9E9E"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@id/edtuserName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="32dp" />

    <!-- Text Quên mật khẩu -->
    <TextView
        android:id="@+id/txtforgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu?"
        android:textColor="@color/primary"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintTop_toBottomOf="@id/edtpassword"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp" />

    <!-- Nút Đăng Nhập -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignIn"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:text="Đăng Nhập"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_semibold"
        android:background="@drawable/buttonsignin"
        app:layout_constraintTop_toBottomOf="@id/txtforgotPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="32dp" />

    <!-- Đăng ký mới -->
    <TextView
        android:id="@+id/txtSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Chưa có tài khoản? Đăng ký ngay"
        android:textColor="@color/primary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSignIn" />
    <ImageButton
        android:id="@+id/btnToggleTheme"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Đổi chế độ sáng/tối"
        android:src="@drawable/ic_moon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/primary"
        app:layout_constraintEnd_toEndOf="@+id/txtSignUp"
        app:layout_constraintStart_toStartOf="@+id/txtSignUp"
        app:layout_constraintTop_toBottomOf="@+id/txtSignUp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/txtSignUp"
        app:layout_constraintStart_toStartOf="@+id/txtSignUp"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue with"
            android:textColor="@color/primary"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="4dp"/>

        <ImageButton
            android:id="@+id/btnGoogle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="5dp"
            android:contentDescription="sign in with google"
            app:srcCompat="@drawable/ic_google"
            android:background="@null"
            android:scaleType="fitCenter"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
